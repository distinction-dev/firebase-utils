{
  "compilerOptions": {
    "target": "es6",
    "module": "ES6",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@dist/*": [
        "dist/*"
      ]
    },
    "lib": [
      "ES2016",
      "DOM"
    ],
    "noImplicitAny": true,
    "types": [
      "mocha"
    ]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
  ]
}
