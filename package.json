{
  "name": "@distinction-dev/package-name",
  "version": "0.0.0-development",
  "description": "A collection of utils to use along with Firebase",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "targets": {
    "main": {
      "optimize": true
    }
  },
  "scripts": {
    "build": "parcel build --no-source-maps",
    "clean": "rm -rf ./dist/",
    "cm": "cz",
    "coverage": "codecov",
    "lint": "eslint ./src/ --fix",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "test:watch": "jest --watch",
    "test": "jest --coverage",
    "type-check": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/distinction-dev/package-name.git"
  },
  "license": "MIT",
  "author": {
    "name": "Himanshu Pant",
    "email": "himanshupant127@gmail.com",
    "url": "https://github.com/killdozerx2"
  },
  "keywords": [
    "firebase",
    "frontend",
    "typescript"
  ],
  "bugs": {
    "url": "https://github.com/distinction-dev/package-name/issues"
  },
  "homepage": "https://github.com/distinction-dev/package-name#readme",
  "devDependencies": {
    "@parcel/packager-ts": "2.5.0",
    "@parcel/transformer-typescript-types": "2.5.0",
    "@types/jest": "^26.0.24",
    "@types/node": "^12.20.11",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "codecov": "^3.8.3",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^27.2.0",
    "lint-staged": "^10.5.4",
    "parcel": "^2.5.0",
    "prettier": "^2.2.1",
    "process": "^0.11.10",
    "semantic-release": "^19.0.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --cache-location .eslintcache --fix"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "dependencies": {
    "dayjs": "^1.11.2",
    "firebase": "^9.8.1"
  }
}
